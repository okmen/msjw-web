<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans         http://www.springframework.org/schema/beans/spring-beans.xsd         http://code.alibabatech.com/schema/dubbo         http://code.alibabatech.com/schema/dubbo/dubbo.xsd         ">
	<!-- 使用multicast广播注册中心暴露发现服务地址 -->
	<dubbo:application name="consumer-web" />
	<!-- 使用multicast广播注册中心暴露发现服务地址 -->
	<dubbo:registry protocol="zookeeper" address="${dubbo.registry.url}" />
	<!-- 引入服务接口 --><!-- 本地调试通过添加 url="dubbo://127.0.0.1:20880/"> -->
	
	
	<dubbo:reference id="accountService"  interface="cn.account.service.IAccountService" timeout="${dubbo.consumer.timeout}" retries="${dubbo.consumer.retries}" /> 
	
	<!-- 便民服务 -->
	<dubbo:reference id="convenienceService"  interface="cn.convenience.service.IConvenienceService" timeout="${dubbo.consumer.timeout}" retries="${dubbo.consumer.retries}" />

	<dubbo:reference id="illegalService"    interface="cn.illegal.service.IIllegalService" timeout="${dubbo.consumer.timeout}" retries="${dubbo.consumer.retries}" /> 
    
    <dubbo:reference id="microclassServer" url="dubbo://127.0.0.1:30500/" interface="cn.microclass.service.IMicroclassServer" timeout="${dubbo.consumer.timeout}" retries="${dubbo.consumer.retries}" />  
	<!-- <dubbo:reference id="messageService"  interface="cn.message.service.IMessageService" timeout="${dubbo.consumer.timeout}" retries="${dubbo.consumer.retries}" />  -->
	<!-- <dubbo:reference id="exceptionService" url="dubbo://127.0.0.1:30000/" interface="cn.exception.service.IExceptionService" timeout="${dubbo.consumer.timeout}" retries="${dubbo.consumer.retries}" />
	<dubbo:reference id="accountService" url="dubbo://127.0.0.1:30100/" interface="cn.account.service.IAccountService" timeout="${dubbo.consumer.timeout}" retries="${dubbo.consumer.retries}" />  -->
     
</beans>
	